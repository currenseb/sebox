<turbo-frame id="modal">
  <div class="bg-white p-6 rounded-lg shadow-lg max-w-md mx-auto">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Enter Shipping Address</h2>

    <%= form_with model: user, url: update_address_user_path(user), method: :patch, data: { turbo: false } do |f| %>

      <!-- Street -->
      <div class="mb-4">
        <%= f.label :street, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :street, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- City -->
      <div class="mb-4">
        <%= f.label :city, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :city, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- State -->
      <div class="mb-4">
        <%= f.label :state, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :state, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- Zip -->
      <div class="mb-6">
        <%= f.label :zip, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :zip, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- Actions -->
      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", checkout_path, class: "px-5 py-2 text-gray-500 hover:text-gray-700 font-medium" %>
        <%= f.submit "Save", class: "cursor-pointer bg-blue-600 hover:bg-blue-700 text-white font-medium px-5 py-2 rounded-lg shadow-sm transition" %>
      </div>

    <% end %>
  </div>
</turbo-frame>
