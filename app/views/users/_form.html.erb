<turbo-frame id="modal">
  <div class="bg-white p-6 rounded shadow-md max-w-md mx-auto">
    <h2 class="text-xl font-bold mb-4">Enter Shipping Address</h2>

    <%= form_with model: user, url: update_address_user_path(user), method: :patch, data: { turbo: false } do |f| %>
      <%= f.label :street %>
      <%= f.text_field :street, class: "w-full p-2 border mb-2" %>

      <%= f.label :city %>
      <%= f.text_field :city, class: "w-full p-2 border mb-2" %>

      <%= f.label :state %>
      <%= f.text_field :state, class: "w-full p-2 border mb-2" %>

      <%= f.label :zip %>
      <%= f.text_field :zip, class: "w-full p-2 border mb-4" %>

      <div class="flex justify-between">
        <%= f.submit "Save", class: "bg-blue-500 text-black font-semibold rounded  cursor-pointer" %>
        <%= link_to "Cancel", checkout_path, class: "text-red-500 font-semibold px-4 py-2 rounded" %>
      </div>
    <% end %>
  </div>
</turbo-frame>
