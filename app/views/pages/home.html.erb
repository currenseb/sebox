<div class="min-h-screen bg-gray-200">
  <header class="bg-white shadow p-4">
    <div class="flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900">Featured Products</h1>
      <div class="flex space-x-6">
        <div class="flex space-x-4">
          <a href="/products" class="text-blue-600 font-semibold hover:underline">Search For Product</a>
          <a href="/cart" class="text-blue-600 font-semibold hover:underline">Cart</a>
          <a href="/contact" class="text-blue-600 font-semibold hover:underline">Contact</a>
        </div>
      </div>
    </div>
  </header>
  <main class="p-4">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% @products.each do |product| %>
          <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <div class="h-48 bg-gray-200">
              <% if product.featured_image.attached? %>
                <%= image_tag product.featured_image, class: "w-full h-full object-cover" %>
              <% end %>
            </div>
            <div class="p-4">
              <div class="flex items-baseline space-x-1">
                <h3 class="text-lg font-semibold"><%= product.name %></h3>
                <h3 class="text-lg font-semibold">&nbsp-&nbsp$</h3>
                <h3 class="text-lg font-semibold"><%= product.price %></h3>
              </div>
              <a href="<%= product_path(product) %>" class="mt-3 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">View</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </main>

  <footer class="bg-white mt-12 py-6 text-center text-gray-500 text-sm">
    &copy; <%= Date.current.year %> Sebox. This is a FAKE store made for the purpose of applying Ruby on Rails and Tailwind CSS.
  </footer>
</div>

