<h1 class="text-3xl font-bold mb-4">Products</h1>

<div class="mb-4 space-x-4">
  <% if current_user&.email_address == "currensebastian@gmail.com" %>
    <%= link_to "New Product", new_product_path, class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
  <% end %>
</div>

<div class="mb-4">
  <%= form_with url: products_path, method: :get, local: true do |form| %>
    <div class="flex gap-2">
      <%= form.text_field :query, placeholder: "Search products...", value: params[:query], class: "w-full border rounded font-semibold px-3 py-2" %>
      <%= form.submit "Search", class: "bg-blue-600 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>

<div id="products" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @products.each do |product| %>
    <div class="p-4 border rounded shadow hover:shadow-lg transition">
      <%= link_to product.name, product, class: "text-lg font-semibold text-indigo-700 hover:underline" %>
    </div>
  <% end %>
</div>


