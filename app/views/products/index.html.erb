<h1 class="text-3xl font-bold mb-8 text-gray-800">Products</h1>

<!-- New Product Button -->
<div class="mb-8">
  <% if current_user&.email_address == "currensebastian@gmail.com" %>
    <%= link_to "New Product", new_product_path,
                class: "inline-block bg-green-600 text-white px-5 py-2 rounded-lg shadow hover:bg-green-700 transition" %>
  <% end %>
</div>

<!-- Search Bar -->
<div class="bg-white shadow-sm rounded-lg p-4 mb-10">
  <%= form_with url: products_path, method: :get, local: true do |form| %>
    <div class="flex space-x-4">
      <%= form.text_field :query,
                          placeholder: "Search products...",
                          value: params[:query],
                          class: "w-full border border-gray-300 rounded-lg font-medium px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= form.submit "Search",
                      class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg shadow transition" %>
    </div>
  <% end %>
</div>

<!-- Product Grid -->
<div id="products" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  <% @products.each do |product| %>
    <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition transform hover:-translate-y-1 p-5 flex flex-col justify-between">
      <div>
        <span class="block text-lg font-semibold text-gray-800"><%= product.name %></span>
        <span class="block mt-1 text-gray-500 font-medium">$<%= product.price %></span>
      </div>
      <div class="mt-4">
        <%= link_to "View", product,
                    class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition" %>
      </div>
    </div>
  <% end %>
</div>








