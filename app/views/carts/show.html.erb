<h1 class="text-2xl font-bold mb-4">Your Cart</h1>

<% if @cart_items.any? %>
  <ul>
    <% @cart_items.each do |item| %>
      <li class="mb-4 border-b pb-2">
        <p><strong><%= item.product.name %></strong></p>
        <p>Quantity: <%= item.quantity %></p>
        <p>Price each: <%= number_to_currency(item.product.price) %></p>
        <p>Subtotal: <%= number_to_currency(item.quantity * item.product.price) %></p>

        <%= button_to "Remove", cart_item_path(item), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600" %>
      </li>
    <% end %>
  </ul>

  <p class="mt-6 text-xl font-semibold">
    Total: <%= number_to_currency(@cart_items.sum { |item| item.quantity * item.product.price }) %>
  </p>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

